#! /usr/bin/bash

#echo "== db-sessions"
CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-sessions"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"


if [ "$1" = "prod" ]; then
  echo "using production"
  URL="postgresql://cruddurroot:goodDatabasePassword1@cruddur-db-instance.cmy8pv6hu6oh.sa-east-1.rds.amazonaws.com:5432/cruddur"
else
  echo "Running in development mode"
  URL=$CONNECTION_URL
fi


NO_DB_URL=$(sed 's/\/cruddur//g' <<< "postgresql://cruddurroot:goodDatabasePassword1@cruddur-db-instance.cmy8pv6hu6oh.sa-east-1.rds.amazonaws.com:5432/cruddur")
psql "postgresql://cruddurroot:goodDatabasePassword1@cruddur-db-instance.cmy8pv6hu6oh.sa-east-1.rds.amazonaws.com:5432/cruddur" -c "select pid as process_id, \
       usename as user,  \
       datname as db, \
       client_addr, \
       application_name as app,\
       state \
from pg_stat_activity;"