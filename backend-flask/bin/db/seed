#! /usr/bin/bash

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-seed"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"


seed_path=$(realpath .)/db/seed.sql
echo $seed_path


if [ "$1" = "prod" ]; then
  echo "using production"
  URL="postgresql://cruddurroot:goodDatabasePassword1@cruddur-db-instance.cmy8pv6hu6oh.sa-east-1.rds.amazonaws.com:5432/cruddur"
  echo "$URL"
else
  echo "Running in development mode"
  URL=$CONNECTION_URL
  echo "$URL"
fi


psql $URL cruddur < $seed_path
